generator client {
  provider = "prisma-client-js"
}

datasource db {
  // provider = "postgresql"
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Profissional {
  id                   Int           @id @default(autoincrement())
  nome                 String        @db.Text
  descricao            String        @db.Text
  imagemUrl            String
  avaliacao            Float
  quantidadeAvaliacoes Int
  agendamentos         Agendamento[]

  @@map("profissional")
}

model Servico {
  id           Int           @id @default(autoincrement())
  nome         String        @unique @db.VarChar(255)
  descricao    String?       @db.Text
  preco        Float
  qtdeSlots    Int
  imagemUrl    String
  agendamentos Agendamento[]

  @@map("servico")
}

model Agendamento {
  id             Int          @id @default(autoincrement())
  emailCliente   String
  data           DateTime     @db.Timestamp
  profissional   Profissional @relation(fields: [profissionalId], references: [id])
  profissionalId Int
  servicos       Servico[]

  @@map("agendamento")
}

